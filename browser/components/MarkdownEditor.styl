.root
  position relative

.codeEditor
  absolute top bottom left right

.hide
  z-index 0
  opacity 0
  pointer-events none

.codeEditor--hide
  @extend .codeEditor
  @extend .hide

.preview
  display block
  absolute top bottom left right
  background-color white
  height 100%
  width 80%

.toc
  width 20%
  absolute right
  background-color white

.preview--hide
  @extend .preview
  @extend .hide

